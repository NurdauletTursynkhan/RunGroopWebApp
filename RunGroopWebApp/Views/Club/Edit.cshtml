@using RunGroopWebApp.Data.Enum
@using RunGroopWebApp.ViewModels
@model EditClubViewModel

@{
    ViewData["Title"] = "Edit Club";
}

<h1 class="mb-4">Edit Club</h1>

<form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="AddressId" />

    <div class="form-group mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Enter club title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <input asp-for="Description" class="form-control" placeholder="Enter description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ClubCategory" class="form-label">Club Category</label>
        <select asp-for="ClubCategory" asp-items="@Html.GetEnumSelectList<ClubCategory>()" class="form-control">
            <option value="">-- Select a category --</option>
        </select>
        <span asp-validation-for="ClubCategory" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Address.Street" class="form-label">Street</label>
        <input asp-for="Address.Street" class="form-control" placeholder="Enter street" />
        <span asp-validation-for="Address.Street" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Address.City" class="form-label">City</label>
        <input asp-for="Address.City" class="form-control" placeholder="Enter city" />
        <span asp-validation-for="Address.City" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Address.State" class="form-label">State</label>
        <input asp-for="Address.State" class="form-control" placeholder="Enter state" />
        <span asp-validation-for="Address.State" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="Image" class="form-label">Upload New Image</label>
        <input asp-for="Image" type="file" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="Index" asp-controller="Dashboard" class="btn btn-secondary ms-2">Cancel</a>
</form>
